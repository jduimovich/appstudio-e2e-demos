
SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

source $SCRIPTDIR/select-ns.sh default  
for dir in demos/*
do
    APP=$(basename $dir)
    if [ -n "$SINGLE_NAMESPACE_MODE" ]
    then 
        oc delete application $APP -n $SINGLE_NAMESPACE
    else  
        oc delete application $APP -n $APP  
        oc delete project $APP  
    fi
done

    