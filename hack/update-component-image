 COMP=$1
 IMG=$2

if [ -z "$COMP" ]
then
       echo "missing component "
       exit 1 
fi
 if [ -z "$IMG" ]
then
       echo "missing image "
       exit 1 
fi  

echo "Updating Component: $COMP image to: $IMG"
 oc get component $COMP -n $COMP -o yaml  | \
     yq '.spec.containerImage="'$IMG'"' | \
     oc apply -n $COMP  -f -
